set $blue #89b4fa
set $lavender #b4befe
set $text #cdd6f4
set $subtext1 #bac2de
set $subtext0 #a6adc8
set $overlay2 #9399b2
set $overlay1 #7f849c
set $overlay0 #6c7086
set $surface2 #585b70
set $surface1 #45475a
set $surface0 #313244
set $base #1e1e2e
set $mantle #181825
set $crust #11111b


# target                 title     bg    text   indicator  border
client.focused           $lavender $base $text  $rosewater $lavender
client.focused_inactive  $overlay0 $base $text  $rosewater $overlay0
client.unfocused         $overlay0 $base $text  $rosewater $overlay0
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

## Screenshots
bindsym Print exec --no-startup-id /bin/maim "~/Pictures/$(date).png"
bindsym Mod1+Print exec --no-startup-id /bin/maim --window $(xdotool getactivewindow) "~/Pictures/$(date).png"
bindsym Shift+Print exec --no-startup-id /bin/maim --select "~/Pictures/$(date).png"

## Clipboard Screenshots
bindsym Ctrl+Print exec --no-startup-id /bin/maim | xclip -selection clipboard -t image/png
bindsym Ctrl+Mod1+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

focus_follows_mouse no

for_window [class="Viewnior"] floating enable
for_window [class="Ulauncher"] floating enable
for_window [title="Volume Control"] floating enable
for_window [class="1Password"] floating enable
for_window [class="Thunar"] floating enable
for_window [class="feh"] floating enable
for_window [class="Nitrogen"] floating enable
for_window [class="^i3.wezterm"] border pixel 1

set $mon1 DisplayPort-0
set $mon2 DisplayPort-1

workspace $ws1 output $mon1

# Load the layout
exec --no-startup-id i3-msg 'workspace $ws1; append_layout ~/.config/i3/workspace-1.json'

# Start applications with specific class names
exec --no-startup-id i3-msg 'workspace $ws1; exec wezterm start --class=i3.wezterm.nvim  novim'
exec --no-startup-id i3-msg 'workspace $ws1; exec wezterm start --class=i3.wezterm.cli  /usr/bin/zsh'
exec --no-startup-id i3-msg 'workspace $ws1; exec wezterm start --class=i3.wezterm.peaclock  /usr/local/bin/peaclock'

workspace $ws2 output $mon2
exec --no-startup-id i3-msg 'workspace $ws2; exec firefox'

workspace $ws3 output $mon1
exec --no-startup-id 13-msg 'workspace $ws3; exec wezterm'

workspace $ws9 output $mon2
exec --no-startup-id i3-msg 'workspace $ws9; exec spotify'

exec --no-startup-id i3-msg 'workspace $ws1; move workspace to output $mon1'
exec --no-startup-id i3-msg 'workspace $ws2; move workspace to output $mon2'

